<h2>Countries</h2>

<form method='post' action='add_country'>
  Country name: <input name='name' /><br/>
  Years active <input name='years' /><br/>
  Flag file <input name='flag_file_name' /><br/>
  <input type='submit' value='Add country' />
</form>

<table>
  <tr>
    <th>Country</th>
    <th>Years</th>
    <th colspan='3'>Flag file name</th>
  </tr>
  <% countries.each do |country| %>
    <tr>
      <form method='post' action='update_country'>
        <td><input type='text' name='name' value='<%= country.name %>' /></td>
        <td><input type='text' name='years' value='<%= country.years %>' /></td>
        <td><input type='text' name='flag_file_name' value='<%= country.flag_file_name %>' /></td>
        <td>
          <input type='hidden' name='id' value='<%= country.id %>' />
          <input type='submit' name='do' value='Update' />
        </td>
        <td>
          <input type='submit' name='do' value='Delete' />
        </td>
      </form>
    </tr>
  <% end %>
</table>